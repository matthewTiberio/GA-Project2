<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" type="text/css" href="/stylesheets/kith.css" />
  </head>
  <body>
    <%- include('../partials/header.ejs') %> <%-
    include('../partials/aside.ejs', {persons}) %>
    <main>
      <form action="/kith" method="post">
        <label for="firstName">First Name</label>
        <input type="text" name="firstName" />
        <label for="lastName">Last Name</label>
        <input type="text" name="lastName" />
        <fieldset>
          <legend>Dietary Restrictions</legend>
          <label for="glutenFree">Gluten-Free</label>
          <input name="glutenFree" type="checkbox" />
          <label for="nutFree">Nut-Free</label>
          <input name="nutFree" type="checkbox" />
          <label for="dairyFree">Dairy-Free</label>
          <input name="dairyFree" type="checkbox" />
          <label for="vegetarian">Vegetarian</label>
          <input name="vegetarian" type="checkbox" />
        </fieldset>
        <label for="comment">Additional Comments</label>
        <input type="text" name="comment" />
        <button type="submit">Add Person</button>
      </form>
    </main>
  </body>
</html>
