<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      type="text/css"
      href="/stylesheets/events/main.css"
    />
    <title>Kith & Kin</title>
  </head>
  <body>
    <%- include('../partials/header.ejs') %>
    <main>
    <section class="eventDetails">
        <div class="eventName"><%= event.name %><span></br></span><%= event.location %></div>
        <div class="eventDate"><%= event.date.toDateString() %><span></br></span><%= `${event.date.getHours()} : ${event.date.getMinutes()}` %></div>
        <div class="eventDescr"><%= event.descr %></div>
    </section>
    <section class="menu">
        <a href="/events/<%= event.id %>/menu/new/">+ Add Menu Item</a>
        <div>
          <h4>Appetizers: <span>GF: <%= menuRestrict[0].gFCount %>, NF: <%= menuRestrict[0].nFCount %>, DF: <%= menuRestrict[0].dFCount %>, VG: <%= menuRestrict[0].vgCount %></span></h4>
          <div class="menuType">
          <% event.menu.forEach(function(m) { %>
            <% if (m.type === "Appetizer") { %>
              <a class="nostyle" href="/events/<%= event.id %>/menu?menuId=<%= m._id %>">
              <div class="menuItem">
                <div><%= m.name %></div>
                <div>Made by: <%= m.madeBy.firstName %></div>
                <div>GF NF DF VG</div>
              </div>
              </a>
            <% } %>
          <% }) %>
        </div>
        <div>
          <h4>Salad: <span>GF: <%= menuRestrict[1].gFCount %>, NF: <%= menuRestrict[1].nFCount %>, DF: <%= menuRestrict[1].dFCount %>, VG: <%= menuRestrict[1].vgCount %></span></h4>
          <div class="menuType">
          <% event.menu.forEach(function(m) { %>
            <% if (m.type === "Salad") { %>
              <a class="nostyle" href="/events/<%= event.id %>/menu?menuId=<%= m._id %>">
              <div class="menuItem">
                <div><%= m.name %></div>
                <div>Made by: <%= m.madeBy.firstName %></div>
              </div>
              </a>
            <% } %>
          <% }) %>
        </div>
        <div>
          <h4>First Course: <span>GF: <%= menuRestrict[2].gFCount %>, NF: <%= menuRestrict[2].nFCount %>, DF: <%= menuRestrict[2].dFCount %>, VG: <%= menuRestrict[2].vgCount %></span></h4>
          <div class="menuType">
          <% event.menu.forEach(function(m) { %>
            <% if (m.type === "First Course") { %>
              <a class="nostyle" href="/events/<%= event.id %>/menu?menuId=<%= m._id %>">
              <div class="menuItem">
                <div><%= m.name %></div>
                <div>Made by: <%= m.madeBy.firstName %></div>
              </div>
              </a>
            <% } %>
          <% }) %>
        </div>
        <div>
          <h4>Entree: <span>GF: <%= menuRestrict[3].gFCount %>, NF: <%= menuRestrict[3].nFCount %>, DF: <%= menuRestrict[3].dFCount %>, VG: <%= menuRestrict[3].vgCount %></span></h4>
          <div class="menuType">
          <% event.menu.forEach(function(m) { %>
            <% if (m.type === "Entree") { %>
              <a class="nostyle" href="/events/<%= event.id %>/menu?menuId=<%= m._id %>">
              <div class="menuItem">
                <div><%= m.name %></div>
                <div>Made by: <%= m.madeBy.firstName %></div>
              </div>
              </a>
            <% } %>
          <% }) %>
        </div>
        <div>
          <h4>Side Dish: <span>GF: <%= menuRestrict[4].gFCount %>, NF: <%= menuRestrict[4].nFCount %>, DF: <%= menuRestrict[4].dFCount %>, VG: <%= menuRestrict[4].vgCount %></span></h4>
          <div class="menuType">
          <% event.menu.forEach(function(m) { %>
            <% if (m.type === "Side Dish") { %>
              <a class="nostyle" href="/events/<%= event.id %>/menu?menuId=<%= m._id %>">
              <div class="menuItem">
                <div><%= m.name %></div>
                <div>Made by: <%= m.madeBy.firstName %></div>
              </div>
              </a>
            <% } %>
          <% }) %>
        </div> 
        <div>
          <h4>Dessert: <span>GF: <%= menuRestrict[5].gFCount %>, NF: <%= menuRestrict[5].nFCount %>, DF: <%= menuRestrict[5].dFCount %>, VG: <%= menuRestrict[5].vgCount %></span></h4>
          <div class="menuType">
          <% event.menu.forEach(function(m) { %>
            <% if (m.type === "Dessert") { %>
              <a class="nostyle" href="/events/<%= event.id %>/menu?menuId=<%= m._id %>">
              <div class="menuItem">
                <div><%= m.name %></div>
                <div>Made by: <%= m.madeBy.firstName %></div>
              </div>
              </a>
            <% } %>
          <% }) %>
        </div>                       
    </section>
    <aside>
        <h3>Guest List: <span><%= guestRestrict.guestCount %></span></h3>
        <p> GF: <%= guestRestrict.gFCount %>, NF: <%= guestRestrict.nFCount %>, DF: <%= guestRestrict.dFCount %>, VG: <%= guestRestrict.vgCount %></p>
        <ul>
            <%- event.guestList.map(p => 
                `<form action="/events/${event.id}/guest/?_method=DELETE" method="post">
                    <input type="hidden" name="kithId" value="${p._id}">
                    <li><a href="/kith/${p._id}">${p.firstName}</a><span>${p.glutenFree ? "GF" : ""} ${p.nutFree ? "NF" : ""} ${p.dairyFree ? "DF" : ""} ${p.vegetarian ? "VG" : ""}</span><button type="submit">X</button></li>
                </form>`
                ).join('') 
            %>
        </ul>
      
        <div>Additional Guests</div>
        <form action="/events/<%= event.id %>/guest" method="post">
          <select name="kithId">
            <option disabled selected>Select New Guest</option>
            <%- persons.map(p =>
                `<option value="${p._id}">${p.firstName}</option>`
            ).join('') %>
          </select>
          <button type="submit">Add</button>
        </form>
      </aside>
      <div class="other">
      <h4>Other Restrictions</h4>
        <% event.guestList.forEach(function(g) { %>
          <% if (g.comment !== "") { %>
          <div><%= g.firstName %>: <%= g.comment %></div>
        <% }}) %>
    </div>
    </main>
    <div class="submitButtons">
    <form action="/events/<%= event.id %>/edit" method="GET">
      <button type="submit">Edit Event</button>
    </form>
    <form action="/events/<%= event._id %>?_method=DELETE" method="POST">
      <button type="submit">Delete Event</button>
    </form>
  </body>
</html>
