<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" type="text/css" href="/stylesheets/kith.css" />
    <title>Kith & Kin</title>
  </head>
  <body>
    <%- include('../partials/header.ejs') %>
    <main>
      <form action="/events/<%= event._id %>/menu" method="post">
        <label for="name">Dish Name</label>
        <input type="text" name="name" />
        <select name="kithId">
          <%- persons.map(p => `
          <option value="${p._id}">${p.firstName}</option>
          ` ).join('') %>
        </select>
        <fieldset name="type">
          <legend>Dish Type</legend>
          <label for="appetizer">Appetizer</label>
          <input name="type" value="appetizer" type="radio" />
          <label for="salad">Salad</label>
          <input name="type" value="salad" type="radio" />
          <label for="firstCourse">First Course</label>
          <input name="type" value="firstCourse" type="radio" />
          <label for="entree">Entree</label>
          <input name="type" value="entree" type="radio" />
          <label for="side">Side Dish</label>
          <input name="type" value="side" type="radio" />
          <label for="dessert">Dessert</label>
          <input name="type" value="dessert" type="radio" />
        </fieldset>
        <fieldset>
          <legend>Dietary Restrictions</legend>
          <label for="glutenFree">Gluten-Free</label>
          <input name="glutenFree" type="checkbox" />
          <label for="nutFree">Nut-Free</label>
          <input name="nutFree" type="checkbox" />
          <label for="dairyFree">Dairy-Free</label>
          <input name="dairyFree" type="checkbox" />
          <label for="vegetarian">Vegetarian</label>
          <input name="vegetarian" type="checkbox" />
        </fieldset>
        <label for="comment">Additional Comments</label>
        <input class="comment" type="text" name="comment" />
        <button type="submit">Add Item</button>
      </form>
    </main>
  </body>
</html>
